✅ Day10_ArrayPractice.cpp

#include <bits/stdc++.h>
using namespace std;

/*
DAY 10 – ARRAY PRACTICE
Problems:
1. Two Sum
2. Kadane's Algorithm
*/

// 1️⃣ Two Sum
vector<int> twoSum(vector<int>& nums, int target) {
    unordered_map<int,int> mp;

    for (int i = 0; i < nums.size(); i++) {
        int complement = target - nums[i];

        if (mp.count(complement))
            return {mp[complement], i};

        mp[nums[i]] = i;
    }
    return {};
}

// 2️⃣ Kadane's Algorithm
int maxSubArray(vector<int>& nums) {
    int curr = nums[0], best = nums[0];

    for (int i = 1; i < nums.size(); i++) {
        curr = max(nums[i], curr + nums[i]);
        best = max(best, curr);
    }
    return best;
}

int main() {
    vector<int> nums = {2,7,11,15};
    vector<int> result = twoSum(nums, 9);
    cout << "Two Sum Indexes: " << result[0] << " " << result[1] << endl;

    vector<int> arr = {-2,1,-3,4,-1,2,1,-5,4};
    cout << "Maximum Subarray Sum: " << maxSubArray(arr) << endl;

    return 0;
}
✅ Day10_ArrayPractice.py
"""
DAY 10 – ARRAY PRACTICE
Problems:
1. Two Sum
2. Kadane's Algorithm
"""

def two_sum(nums, target):
    mp = {}

    for i, num in enumerate(nums):
        complement = target - num

        if complement in mp:
            return [mp[complement], i]

        mp[num] = i

    return []


def max_subarray(nums):
    curr = best = nums[0]

    for num in nums[1:]:
        curr = max(num, curr + num)
        best = max(best, curr)

    return best


if __name__ == "__main__":
    print("Two Sum:", two_sum([2,7,11,15], 9))
    print("Maximum Subarray:", max_subarray([-2,1,-3,4,-1,2,1,-5,4]))
